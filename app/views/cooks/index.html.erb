<%= render "shared/header" %>
<div class='main'>

  <%# 画面上部の「人生を変えるフリマアプリ」帯部分 %>
  <div class='title-contents'>
    <h2 class='service-title'>
      人生を変えるフリマアプリ
    </h2>
    
  </div>
  <%# /画面上部の「人生を変えるフリマアプリ」帯部分  %>

  <%# 商品一覧 %>
  <div class='item-contents'>
    <h2 class='title'>ピックアップカテゴリー</h2>
    <div class="subtitle" >
      新規投稿料理
    </div>
    <ul class='item-lists'>
     <% if @cooks.present? %>
      <% @cooks.each do |cook| %>
      <li class='list'>
        <%= link_to cook_path(cook) do %>
        <div class='item-img-content'>
          <%= image_tag cook.image, class: "item-img" %>
          
          
        </div>
        <div class='item-info'>
          <h3 class='item-name'>
            <%= cook.cook_name %>
          </h3>
          <div class='item-price'>
            <span><%= cook.serving.name %>円<br><%= cook.serving.name %></span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
      <% end %>
      <% else %>
      <li class='list'>
        <%= link_to '#' do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "item-img" %>
        <div class='item-info'>
          <h3 class='item-name'>
            料理を投稿してね！
          </h3>
          <div class='item-price'>
            <span>99999999円<br>(税込み)</span>
            <div class='star-btn'>
              <%= image_tag "star.png", class:"star-icon" %>
              <span class='star-count'>0</span>
            </div>
          </div>
        </div>
        <% end %>
      </li>
    </ul>
  </div>
  <% end %>
  <%# /商品一覧 %>
</div>
<%= link_to(new_cook_path, class: 'purchase-btn') do %>
  <%= image_tag 'f.jpeg' , size: '185x50' ,class: "purchase-btn-icon" %>
<% end %>
<%= render "shared/footer" %>